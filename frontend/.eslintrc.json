{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:cypress/recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "eslint-config-prettier"
  ],
  "rules": {
    "react/prop-types": "off"
  },
  "plugins": [],
  "ignorePatterns": [
    "**/*.css",
    "**/*.css.map",
    "**/*.scss",
    "**/*.svg",
    "**/*.png",
    "**/*.jpg",
    "**/uswds/**",
    "**/node_modules/**",
    "**/build/**",
    "**/*.test.js"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "jest": true
  }
}
