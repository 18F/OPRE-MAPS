{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceNamePrefix": {
            "type": "string",
            "defaultValue": "opre-ops",
            "metadata": {
                "description": "Prefix put in front of all resource names, wherever possible. E.g. opre-ops"
            }
        },
        "resourceNamePostfix": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Postfix put after of all resource names, wherever possible. Left empty for now."
            }
        },
        "databaseName": {
            "type": "string",
            "metadata": {
                "description": "Name of the PostgreSQL database."
            },
            "defaultValue": "ops-db"
        },
        "containerDataImportImage": {
            "type": "string",
            "metadata": {
                "description": "Docker image for the data-import container instance"
            },
            "defaultValue": "ghcr.io/hhs/opre-ops/ops-data-tools:latest"
        },
        "containerBackendImage": {
            "type": "string",
            "metadata": {
                "description": "Docker image for the backend container instance"
            },
            "defaultValue": "ghcr.io/hhs/opre-ops/ops-backend:latest"
        },
        "dbAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the PostgreSQL database"
            },
            "defaultValue": "postgres"
        },
        "dbAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the PostgreSQL database"
            },
            "defaultValue": "local_password0!"
        },
        "blobStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure Blob Storage account"
            },
            "defaultValue": "opreopsblob"
        },
        "blobStorageContainerName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure Blob Storage container for hosting the frontend"
            },
            "defaultValue": "opre-ops-frontend"
        },
        "frontendFolderPath": {
            "type": "string",
            "metadata": {
                "description": "Path to the frontend code folder to be hosted in Azure Blob Storage"
            },
            "defaultValue": "frontend"
        }
    },
    "variables": {
        "#": "== Resources ==",
        "db-name": "[concat(parameters('resourceNamePrefix'), '-db', parameters('resourceNamePostfix'))]",
        "data-import-task-name": "[concat(parameters('resourceNamePrefix'), '-data-import', parameters('resourceNamePostfix'))]",
        "backend-name": "[concat(parameters('resourceNamePrefix'), '-backend', parameters('resourceNamePostfix'))]",
        "frontend-name": "[concat(parameters('resourceNamePrefix'), '-frontend', parameters('resourceNamePostfix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.DBforPostgreSQL/flexibleServers",
            "apiVersion": "2022-11-01-preview",
            "name": "[parameters('databaseName')]",
            "location": "eastus",
            "tags": {
                "Owner": "tdonaworth"
            },
            "sku": {
                "name": "Standard_B1ms",
                "tier": "Burstable"
            },
            "identity": "[json('null')]",
            "properties": {
                "createMode": "Default",
                "administratorLogin": "postgres",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
                "availabilityZone": "",
                "Backup": {
                    "backupRetentionDays": "7",
                    "geoRedundantBackup": "Disabled"
                },
                "highAvailability": {
                    "mode": "Disabled",
                    "standbyAvailabilityZone": ""
                },
                "dataencryption": "[json('null')]",
                "Network": {
                    "DelegatedSubnetResourceId": "/subscriptions/91ab8ed2-74e6-4366-aaf5-036186ec70db/resourceGroups/OPRE-API-ACR/providers/Microsoft.Network/virtualNetworks/OPRE-API-ACR-vnet/subnets/default",
                    "PrivateDnsZoneArmResourceId": "/subscriptions/91ab8ed2-74e6-4366-aaf5-036186ec70db/resourceGroups/OPRE-API-ACR/providers/Microsoft.Network/privateDnsZones/opre-db.private.postgres.database.azure.com"
                },
                "Storage": {
                    "StorageSizeGB": "32",
                    "iopsTier": ""
                },
                "version": "14",
                "authConfig": {}
            }
        },
        {
            "name": "dataImportContainerGroup",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "dataImportContainer",
                        "properties": {
                            "image": "[parameters('containerInstanceDataImportImage')]",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 1.5
                                }
                            },
                            "command": [
                                "sh",
                                "-c",
                                "your-command-here"
                            ],
                            "environmentVariables": [
                                {
                                    "name": "ENV_VARIABLE_NAME",
                                    "value": "ENV_VARIABLE_VALUE"
                                }
                            ]
                        }
                    }
                ],
                "restartPolicy": "Never",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "port": 80,
                            "protocol": "TCP"
                        }
                    ]
                },
                "osType": "Linux"
            }
        },
        {
            "name": "backendContainerGroup",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "backendContainer",
                        "properties": {
                            "image": "[parameters('containerInstanceBackendImage')]",
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 2
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "PGHOST",
                                    "value": "[concat(parameters('postgresqlAdminUsername'), '.postgres.database.azure.com')]"
                                },
                                {
                                    "name": "PGPORT",
                                    "value": "5432"
                                },
                                {
                                    "name": "PGDATABASE",
                                    "value": "your-database-name"
                                },
                                {
                                    "name": "PGUSER",
                                    "value": "[parameters('postgresqlAdminUsername')]"
                                },
                                {
                                    "name": "PGPASSWORD",
                                    "secureValue": "[parameters('postgresqlAdminPassword')]"
                                }
                            ]
                        }
                    }
                ],
                "restartPolicy": "Always",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "port": 8080,
                            "protocol": "TCP"
                        }
                    ]
                },
                "osType": "Linux"
            },
            "dependsOn": [
                "dataImportContainerGroup"
            ]
        },
        {
            "name": "[parameters('blobStorageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {}
        },
        {
            "name": "[concat(parameters('blobStorageAccountName'), '/default/', parameters('blobStorageContainerName'))]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[parameters('blobStorageAccountName')]"
            ],
            "properties": {}
        },
        {
            "name": "frontendBlobDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "dependsOn": [
                "[concat(parameters('blobStorageAccountName'), '/default/', parameters('blobStorageContainerName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Storage/storageAccounts/blobServices/containers/blobs",
                            "apiVersion": "2021-04-01",
                            "name": "[concat(parameters('blobStorageAccountName'), '/default/', parameters('blobStorageContainerName'), '/', 'index.html')]",
                            "properties": {
                                "content": "[base64(concat('Your frontend code goes here'))]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
